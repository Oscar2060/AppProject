<p id="notice"><%= notice %></p>

<h1><center>Oscar's Gym</center></h1>
<br>
<h2>Gym Products</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Numinstock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gym_products.each do |gym_product| %>
      <tr>
        <td><%= gym_product.name %></td>
        <td><%= gym_product.description %></td>
        <td><%= gym_product.price %></td>
        <td><%= gym_product.numInStock %></td>
        <td><%= link_to 'Show', gym_product %></td>
        <td><%= link_to 'Edit', edit_gym_product_path(gym_product) %></td>
        <td><%= link_to 'Destroy', gym_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

